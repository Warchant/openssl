{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Genkey1",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/build/apps/openssl",
            "args": [
                "ecparam", 
                "-genkey",
                "-name",
                "secp256k1",
                "-out",
                "/tmp/vuln1.pem"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}",
            "environment": [{"name":"LD_LIBRARY_PATH", "value":"${workspaceRoot}/build"}],
            "externalConsole": true,
            "linux": {
                "MIMode": "gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ]
            },
            "osx": {
                "MIMode": "lldb"
            },
            "windows": {
                "MIMode": "gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ]
            }
        },
        {
            "name": "Hack",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/build/apps/openssl",
            "args": ["ec", //"-in", "/home/bogdan/Desktop/RP1/ecc/gen_params/attacker.pem", "-text"],
                "-hack", 
                "-attacker","/home/bogdan/Desktop/RP1/ecc/gen_params/attacker.pem", 
                "-pkey1","/tmp/pub-vuln1.pem", 
                "-pkey2","/tmp/pub-vuln2.pem"],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}",
            "environment": [{"name":"LD_LIBRARY_PATH", "value":"${workspaceRoot}/build"}],
            "externalConsole": true,
            "linux": {
                "MIMode": "gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ]
            },
            "osx": {
                "MIMode": "lldb"
            },
            "windows": {
                "MIMode": "gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ]
            }
        }
    ]
}